<h1>Create an account</h1>

 <% if @errors %>
 <% @errors.each do |error|%>
 <li class="alert alert-danger">
   <%= error %>
 </li>
 <% end %>
 <% end %>
 <br>

 <form class="form-inline" method="post" action="/register">
   <div class="form-group">
     <label>Username:</label>
     <input class="form-control" name="user[username]" type="text">
   </div>
   <div class="form-group">
     <label for="email-input">Email:</label>
     <input class="form-control" name="user[email]" type="text">
   </div>
   <div class="form-group">
     <label for="password-input">Password:</label>
     <input class="form-control" name="user[password]" type="password">
   </div>
   <input type="submit" value="register" class="btn btn-default">
 </form>
